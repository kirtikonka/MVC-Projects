@model Emp

<h1>Add Emp</h1>
<form method="post">
    <div class="form-group">
        <label for="exampleInputPassword1">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Department</label>
        <input asp-for="Dept" type="text" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Dept"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Salary</label>
        <input asp-for="Salary" type="text" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Salary"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}